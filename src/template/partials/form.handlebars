<form class="form">
    {{#each fields}}
          <div class="form-control">
                <label for={{name}}>{{label}}</label>
                <input 
                    type={{type}} 
                    name={{name}} 
                    id={{name}} 
                    class="form-input" 
                />
            </div>
    {{/each}}

    <button type="submit" class="btn btn-submit">{{btnName}}</button>

</form>